  <body class="mainn">
    <!-- Messenger Chat Plugin Code -->
    <div id="fb-root"></div>

    <!-- Your Chat Plugin code -->
    <div id="fb-customer-chat" class="fb-customerchat"></div>

    <script>
      var chatbox = document.getElementById("fb-customer-chat");
      chatbox.setAttribute("page_id", "107644432183763");
      chatbox.setAttribute("attribution", "biz_inbox");
    </script>

    <!-- Your SDK code -->
    <script>
      window.fbAsyncInit = function () {
        FB.init({
          xfbml: true,
          version: "v17.0",
        });
      };

      (function (d, s, id) {
        var js,
          fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js";
        fjs.parentNode.insertBefore(js, fjs);
      })(document, "script", "facebook-jssdk");
    </script>
    <header>
      <img class="logo" src="/imgs/sdwlogo.png" alt="logo" />
      <nav>
        <button id="toggleButton"><i class="fa fa-bars"></i></button>
        <div class="hidden">
          <a href="/">Homepage</a><span class="bordering"></span>
          <a href="/store" id="active">Stores</a
          ><span class="bordering"></span> <a href="/delivery">Services</a
          ><span class="bordering"></span>
          <a href="/contactus" style="width: auto; padding: 2.2vh 1.5vh"
            >About & Contact</a
          >
        </div>
      </nav>
    </header>

    <script src="/js/navigation.js"></script>

    <a href="#buynow" id="noti">CLICK HERE TO BUY!</a>
    <section>
      <h1 id="title"><%= name %></h1>
      <div id="left">
        <img src="/imgs/item_photos/<%= image %>" alt="" id="image" />
        <p id="price"><%= price %></p>
      </div>
      <div id="right">
        <p id="details"><%= details %></p>
      </div>
    </section>
    <form action="/order" method="post">
      <input
        type="hidden"
        name="referrer"
        value="/items/<%= image%>"
        id="referrer"
      />
      <input type="hidden" id="product" value="<%= name%>" name="product" />
      <label for="phone">Enter a phone number:</label>
      <input
        type="tel"
        id="phone"
        name="phone"
        placeholder="123-45-678"
        required
      />
      <label for="amount">Quantatity:</label>
      <input type="number" value="1" id="amount" name="amount" />
      <!-- TODO make a form look like an order -->
      <button type="submit">Order Now!</button>
    </form>
    <div id="backbutton">
